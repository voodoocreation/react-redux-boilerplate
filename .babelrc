{
  "plugins": [
    "@babel/plugin-proposal-optional-chaining",
    ["module-resolver", {
      "root": ["."],
      "alias": {
        "scss": "./scss"
      },
      "cwd": "babelrc"
    }],
    ["wrap-in-js", {
      "extensions": ["css$", "scss$"]
    }]
  ],

  "env": {
    "development": {
      "presets": ["next/babel"]
    },
    "production": {
      "presets": ["next/babel"]
    },
    "test": {
      "presets": [
        [
          "next/babel",
          {
            "preset-env": {
              "targets": { "node": "current" },
              "modules": "commonjs"
            }
          }
        ]
      ]
    }
  }
}
