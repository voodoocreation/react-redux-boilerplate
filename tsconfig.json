{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist"
  },
  "exclude": ["**/dist/*", "**/locales/*", "**/node_modules/*"]
}
